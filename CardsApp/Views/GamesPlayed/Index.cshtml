@model IEnumerable<CardsApp.Data.GamePlayed>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDraw)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stake)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDraw)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stake)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
